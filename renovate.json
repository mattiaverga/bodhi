{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekdays",
    ":automergeMinor",
    ":gitSignOff",
    ":dependencyDashboard"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "commitMessageAction": "Lock file maintenance"
  },
  "ignorePaths": ["**/devel/**"],
  "automergeStrategy": "rebase",
  "stabilityDays": 3,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchLanguages": ["python"],
      "addLabels": ["python"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "groupName": "dev dependencies"
    }
  ]
}
